<table class="table table-hover">
  <thead>
    <tr>
			<th scope="col">Equipo</th>
			
			<% (1..27).each do |number| %>
			<th scope="col" id="<%=number%>"><%=number%></th>
			<% end %>
    </tr>
  </thead>
  <tbody>
		<% @users.each do |user| %>
	  <tr>
			<td><%= user.username %></td>
			<% (1..27).each do |number| %>
				<%if Answer.find_by(user: user.id, question: number)%>
				<td scope="col" id="<%=number%>">CHECK</th>
				<%else%>
				<td scope="col" id="<%=number%>"></th>
				<%end%>
				<% end %>
	  </tr>
	<% end %>
  </tbody>
</table>


